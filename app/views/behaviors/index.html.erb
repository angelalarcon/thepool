<div class="container">
  <h1>Listado de comportamientos</h1>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>URL del icono</th>
            <th>Codigo del icono</th>
            <th>Tipo</th>
          </tr>
        </thead>

        <tbody>
          <% @behaviors.each do |behavior| %>
            <tr>
              <td><%= behavior.name %></td>
              <td><%= behavior.icon_url %></td>
              <td><%= behavior.icon_code %></td>
              <td><%= behavior.icon_type %></td>
              <td>
                <%= link_to 'Mostrar', behavior, class: "btn btn-success" %>
              </td>
              <td><%= link_to 'Editar', edit_behavior_path(behavior), class: "btn btn-primary" %></td>
              <td><%= link_to 'Eliminar', behavior, class: "btn btn-danger", method: :delete, data: { confirm: 'Esta seguro que desea eliminar el comportamiento?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <h3><%= link_to 'Nuevo comportamiento', new_behavior_path %></h3>
</div>