<div class="container">
  <h1>Listado de desarrolladores inscritos</h1>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Telefono</th>
            <th>Beca?</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @developers.each do |developer| %>
            <tr>
              <td><%= developer.name %></td>
              <td><%= developer.last_name %></td>
              <td><%= developer.email %></td>
              <td><%= developer.phone %></td>
              <td><%= developer.scholarship ? "Si" : "No" %></td>
              <td>
                <%= link_to 'Mostrar', developer, class: "btn btn-success" %>
              </td>
              <td><%= link_to 'Editar', edit_developer_path(developer), class: "btn btn-primary" %></td>
              <td><%= link_to 'Eliminar', developer, class: "btn btn-danger", method: :delete, data: { confirm: 'Esta seguro que desea eliminar el desarrollador?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <h3><%= link_to 'New Developer', new_developer_path %></h3>
</div>