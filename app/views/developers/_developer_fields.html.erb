<div class="form-group">
	<%= f.label :name, "Nombre" %>
	<%= f.text_field :name, autofocus: true, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :last_name, "Apellido" %>
	<%= f.text_field :last_name, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :phone, "Telefono" %>
	<%= f.text_field :phone, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :address, "Direccion" %>
	<%= f.text_area :address, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :country, "País" %>
	<%= f.collection_select(:country_id, Country.all, :id, :name, {}, html_options = {class: "form-control"}) %>
</div>
<div class="form-group">
	<%= f.label :why_hack, "¿Por qué quieres aplicar?" %>
	<%= f.text_area :why_hack, class: "form-control" %>
</div>
<div class="check-box text-right">
	<label>
		<%= f.check_box :scholarship, class: "scholarship" %> Quiero optar por el programa de becas
	</label>
</div>
<div class="form-group why_scholarship">
	<%= f.label :why_scholarship, "¿Por qué deberías ser seleccionado por un sponsor?" %>
	<%= f.text_area :why_scholarship, class: "form-control" %>
</div>