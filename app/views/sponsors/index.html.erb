<h1>Listing sponsors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Personal email</th>
      <th>Personal phone</th>
      <th>Company name</th>
      <th>Company email</th>
      <th>Company phone</th>
      <th>Active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.name %></td>
        <td><%= sponsor.last_name %></td>
        <td><%= sponsor.email %></td>
        <td><%= sponsor.phone %></td>
        <td><%= sponsor.company_name %></td>
        <td><%= sponsor.company_email %></td>
        <td><%= sponsor.company_phone %></td>
        <td><%= sponsor.active %></td>
        <td><%= link_to 'Show', sponsor %></td>
        <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
        <td><%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

